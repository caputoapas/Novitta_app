<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Main2Activity"
    tools:showIn="@layout/activity_main2"
    android:background="#FFFFFF">

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="510dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FFFFFF">

            <TextView
                android:id="@+id/Tipo"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:textSize="18dp"
                android:textAlignment="center"/>

            <ImageView
                android:id="@+id/m_satisfeito"
                android:layout_width="83dp"
                android:layout_height="83dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="1dp"
                android:onClick="Satisfeito"
                android:background="#FFFFFF"
                android:src="@mipmap/ic_msatisfeito" />

            <ImageView
                android:id="@+id/satisfeito"
                android:layout_width="83dp"
                android:layout_height="83dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="1dp"
                android:onClick="Satisfeito"
                android:background="#FFFFFF"
                android:src="@mipmap/ic_satisfeito" />

            <ImageView
                android:id="@+id/neutro"
                android:layout_width="83dp"
                android:layout_height="83dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="1dp"
                android:onClick="Neutro"
                android:src="@mipmap/ic_neutro" />

            <ImageView
                android:id="@+id/insatisfeito"
                android:layout_width="83dp"
                android:layout_height="83dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2dp"
                android:src="@mipmap/ic_insatisfeito"
                android:background="#FFFFFF"
                android:onClick="Insatisfeito"/>

            <ImageView
                android:id="@+id/m_insatisfeito"
                android:layout_width="83dp"
                android:layout_height="83dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2dp"
                android:src="@mipmap/ic_minsatisfeito"
                android:background="#FFFFFF"
                android:onClick="Insatisfeito"/>

            <Button
                android:id="@+id/butonVoltar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:text="Voltar"
                />


        </LinearLayout>


    </FrameLayout>

</RelativeLayout>